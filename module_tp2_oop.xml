<?xml version="1.0" encoding="UTF-8"?>
<project name="module_tp2_oop" default="compile.module.tp2_oop">
  <dirname property="module.tp2_oop.basedir" file="${ant.file.module_tp2_oop}"/>
  
  <property name="module.jdk.home.tp2_oop" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.tp2_oop" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.tp2_oop" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.tp2_oop" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="tp2_oop.output.dir" value="${module.tp2_oop.basedir}/out/production/tp2_oop"/>
  <property name="tp2_oop.testoutput.dir" value="${module.tp2_oop.basedir}/out/test/tp2_oop"/>
  
  <path id="tp2_oop.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="tp2_oop.module.production.classpath">
    <path refid="${module.jdk.classpath.tp2_oop}"/>
    <path refid="library.sdljava.classpath"/>
  </path>
  
  <path id="tp2_oop.runtime.production.module.classpath">
    <pathelement location="${tp2_oop.output.dir}"/>
    <path refid="library.sdljava.classpath"/>
  </path>
  
  <path id="tp2_oop.module.classpath">
    <path refid="${module.jdk.classpath.tp2_oop}"/>
    <pathelement location="${tp2_oop.output.dir}"/>
    <path refid="library.sdljava.classpath"/>
  </path>
  
  <path id="tp2_oop.runtime.module.classpath">
    <pathelement location="${tp2_oop.testoutput.dir}"/>
    <pathelement location="${tp2_oop.output.dir}"/>
    <path refid="library.sdljava.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.tp2_oop">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.tp2_oop">
    <patternset refid="excluded.from.module.tp2_oop"/>
  </patternset>
  
  <path id="tp2_oop.module.sourcepath">
    <dirset dir="${module.tp2_oop.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.tp2_oop" depends="compile.module.tp2_oop.production,compile.module.tp2_oop.tests" description="Compile module tp2_oop"/>
  
  <target name="compile.module.tp2_oop.production" depends="register.custom.compilers" description="Compile module tp2_oop; production classes">
    <mkdir dir="${tp2_oop.output.dir}"/>
    <javac2 destdir="${tp2_oop.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.tp2_oop}/javac">
      <compilerarg line="${compiler.args.tp2_oop}"/>
      <bootclasspath refid="tp2_oop.module.bootclasspath"/>
      <classpath refid="tp2_oop.module.production.classpath"/>
      <src refid="tp2_oop.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.tp2_oop"/>
    </javac2>
    
    <copy todir="${tp2_oop.output.dir}">
      <fileset dir="${module.tp2_oop.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.tp2_oop.tests" depends="register.custom.compilers,compile.module.tp2_oop.production" description="compile module tp2_oop; test classes" unless="skip.tests"/>
  
  <target name="clean.module.tp2_oop" description="cleanup module">
    <delete dir="${tp2_oop.output.dir}"/>
    <delete dir="${tp2_oop.testoutput.dir}"/>
  </target>
</project>